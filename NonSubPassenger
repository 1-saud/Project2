class NonSubPassenger extends Passenger {
    boolean coupon;

    NonSubPassenger(String name, int id, boolean coupon) {
        super(name, id);
        this.coupon = coupon;
    }

    @Override
    public void reserveCar(Car c) {
        if (c.maxCap == 0) {
            System.out.println("car capacity is zero");
        }
        car = c;
        c.maxCap = c.maxCap - 1;
        double price = c.route.price;
        if (coupon) {
            tripCost = price - (price * 0.1);
        } else {
            tripCost = price;
        }
    }

    @Override
    public void showInfo() {
        System.out.println("name: " + name);
        System.out.println("id: " + id);
        if (car != null) {
            System.out.println("car code: " + car.code);
            System.out.println("route price: " + car.route.price);
            System.out.println("trip cost: " + tripCost);
        } else {
            System.out.println("no car");
        }
    }
}
